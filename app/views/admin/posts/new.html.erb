<%= link_to("Back to List", admin_posts_path, :class => 'back_link') %>

<h1><%=(controller.action_name=="new") ? "New post" : "Edit Post"%></h1>

<%= form_for([:admin, @post], :html => {:multipart => true}) do |f| %>

 <%= error_messages_for(@post) %>
 
	<div class="field">
	    <%= f.label :title, "Post Title" %><br />
	    <%= f.text_field :title %>
	  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, :size => "70x10" %>
  </div>
  <div>
    <%= f.label :photo, "Upload a photo" %><br />
    <%= f.file_field :photo %>
  </div>
 
  <div class="actions">
    <%= f.submit "Create Post" %>
  </div>
	<div class="actions">
		<%= submit_tag 'Cancel' %>  
	</div>
<% end%>

