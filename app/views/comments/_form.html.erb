<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter, "Name" %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :size=>'40x5'%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>