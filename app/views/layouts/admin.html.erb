<!DOCTYPE html>
<html>
	<head>
  		<title><%= title %></title>
  			<%= csrf_meta_tag %>
			<%= render 'layouts/stylesheets' %>
	</head>
	<body>
		<div class="container">
      <div class="header">
  			<%= render 'layouts/header' %>
  		</div><!-- end header -->
		
  		<!-- begin second half -->
			<div class="flash" >
					<% flash.each do |key, value| %>
						<div class="flash <%= key %>"><%= value %></div>
			 		<% end %>
      			<div class="admin" id="content"><%= yield %></div>
			</div><!-- end flash -->
				<%= render 'layouts/footer' %>
		</div><!-- end container -->
	</body>
</html>