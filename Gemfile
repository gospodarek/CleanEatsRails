source 'http://rubygems.org'

gem 'rails', '3.1.0.rc4'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'mysql2'

# Asset template engines
gem 'sass-rails'
gem 'coffee-script'
gem 'uglifier'

gem "paperclip", "~> 2.3"
gem 'jquery-rails'

group :development do
	gem 'rspec'
  gem 'rspec-rails'
  gem 'autotest'
  gem 'autotest-standalone'
end

group :test do
	gem 'rspec'
	gem 'rspec-rails'
	gem 'autotest'
	gem 'autotest-standalone'  
	gem 'webrat'
end
